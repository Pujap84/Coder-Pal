<body>
    <div class="heading">
        <h1>Coder Pal</h1>
    </div>
    <div class="sidebar">
        <nav>
            <% if is_logged_in? %>
                <h4>Welcome, <%= current_user()['name'] %>!</h4>
                <form action="/sessions" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="submit" value="Logout"/>
                </form>
                <a href="/home">Home</a>
                <a href="/About-us">About Us</a>
                <a href="/Questions">Questions</a>
            <% else %>
                <div class="signup"><a href="/sign_up">Sign Up</a></div>
                <a href="/login">Login</a>
                <a href="/home">Home</a>
                <a href="/About-us">About Us</a>
                <a href="/Questions">Questions</a>
            <% end %>    
        </nav>
    </div>

    <div class="body-text">
        <% if is_logged_in? %>
            <div class="ask-question">
                <h2>Questions</h2>
                <a class="button" href="/questions/create">Ask a question</a>
            </div>  


            <section class="all-questions">
                <% all_questions.each do |question| %>
                <section class="question-item">
    
                    <section class="info">
                        <h3><a href="/questions/<%= question["id"] %>"><%= question["title"] %></a></h3>
                        <h4><%= question["body"] %></h4>
                    </section>
    
                    <% if question["user_id"] == session[:user_id] %>
                        <section class="question-info-edit">
                            <a class="button" href="/questions/<%= question["id"] %>/edit">Edit</a>
                        </section>
                    <% end %>
    
                </section>
                <% end %>
            </section>
    

        <% else %>
            <h2>Questions</h2>
            <section class="all-questions">
                <% all_questions.each do |question| %>
                <section class="question-item">
    
                    <section class="info">
                        <h3><a href="/questions/<%= question["id"] %>"><%= question["title"] %></a></h3>
                        <h4><%= question["body"] %></h4>
                    </section>
                
                </section>
                <% end %>

            </section>
        <% end %>

    </div>
    
</body>








