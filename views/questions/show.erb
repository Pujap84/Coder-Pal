<div class="sidebar">
    <nav>
        <div class="signup"><a href="/sign_up">Sign Up</a></div>
        <a href="/login">Login</a>
        <a href="/home">Home</a>
        <a href="/About-us">About Us</a>
        <a href="/Questions">Questions</a>
    </nav>
</div>

<div class="question-show-text">
    <% if is_logged_in? %>
        <% if question["user_id"] == session[:user_id] %>
            <h2><%= question['title'] %></h2>
            <aside><%= question['votes'] %></aside>
            <div class="question-edit-delete">
                <h3><%= question['body'] %></h3>
                <br><a class="button" href="/questions/<%= question["id"] %>/edit">Edit</a>
                <form action="/questions/<%= question["id"] %>" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="submit" value="delete">
                </form>
            </div>


        <%else %>
            <h2><%= question['title'] %></h2>
            <h3><%= question['body'] %></h3>
            <aside><%= question['votes'] %></aside>
            <hr>
        <% end %>
        <h2>Answers</h2>
        <br><a class="button" href="/questions/<%= question['id'] %>/answers/create">Add an answer</a>
        <hr>
        <% answers.each do |answer| %>
            <h3><%= answer['body'] %></h3>
            <% if answer["user_id"] == session[:user_id] %>
                <a class="button" href="/questions/<%= question['id'] %>/answers/<%= answer['id'] %>/edit">Edit</a>
                <form action="/questions/<%= question['id'] %>/answers/<%= answer['id'] %>" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="submit" value="delete">
                </form>
                <hr>
            <% end %>
        <% end %>
    <%else %>
        <h2><%= question['title'] %></h2>
        <h3><%= question['body'] %></h3>
        <aside><%= question['votes'] %></aside>
        <hr>
    <% end %>
</div>
